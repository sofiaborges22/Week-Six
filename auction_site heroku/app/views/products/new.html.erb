<h1>Add a new product</h1>

<%= form_for [@user, @new_product] do |f|%>
<%= f.label :title%>
<%= f.text_field :title%>
<%= f.label :description%>
<%= f.text_field :description%><br><br>
<%= f.label :price%>
<%= f.text_field :min_bid%><br>
<%= f.label :deadline%>
<%= f.datetime_field :deadline%>
<%= f.button "Add product"%>

<%end%>
